{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       
    },
    "variables": {
        "policyDefinitions": {
            "LogStorage": "[concat('/providers/Microsoft.Management/managementGroups/', 'MGMT_ROOT', '/providers/Microsoft.Authorization/policysetDefinitions/LogStorage')]"
        },
        "policyAssignmentNames": {
            "LogStorage": "LogStorage",
            "description": "Enable log storage and queries ",
            "displayName": "Enable log storage and queries "

        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyAssignmentNames').LogStorage]",
            "properties": {
                "description": "[variables('policyAssignmentNames').description]",
                "displayName": "[variables('policyAssignmentNames').displayName]",
                "policyDefinitionId": "[variables('policyDefinitions').LogStorage]"
            }
        }
    ],
    "outputs": {}
}