{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

    },
    "variables": {
        "policyDefinitions": {
            "notallowedRT": "[concat('/providers/Microsoft.Management/managementGroups/', 'MGMT_ROOT', '/providers/Microsoft.Authorization/policysetDefinitions/Not-allowed-resource-types')]"
        },
        "policyAssignmentNames": {
            "notallowedRT": "Not-allowed-resource-types",
            "description": "Not allowed resource types",
            "displayName": "Not allowed resource types"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-09-01",
            "name": "[variables('policyAssignmentNames').notallowedRT]",
            "properties": {
                "description": "[variables('policyAssignmentNames').description]",
                "displayName": "[variables('policyAssignmentNames').displayName]",
                "policyDefinitionId": "[variables('policyDefinitions').notallowedRT]"
            }
        }
    ],
    "outputs": {}
}